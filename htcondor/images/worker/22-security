use SECURITY: Strong

SEC_CLIENT_AUTHENTICATION = REQUIRED
SEC_CLIENT_AUTHENTICATION_METHODS = FS,GSI
SEC_CLIENT_INTEGRITY = REQUIRED
SEC_CLIENT_ENCRYPTION = REQUIRED

SEC_DAEMON_AUTHENTICATION = REQUIRED
SEC_DAEMON_AUTHENTICATION_METHODS = FS,GSI
SEC_DAEMON_INTEGRITY = REQUIRED
SEC_DAEMON_ENCRYPTION = REQUIRED

SEC_DEFAULT_AUTHENTICATION = REQUIRED
SEC_DEFAULT_AUTHENTICATION_METHODS = FS,GSI
SEC_DEFAULT_INTEGRITY = REQUIRED
SEC_DEFAULT_ENCRYPTION = REQUIRED

SEC_ENABLE_MATCH_PASSWORD_AUTHENTICATION = TRUE

GSI_DAEMON_PROXY =  /etc/condor/certs/proxy.pem
GSI_DAEMON_DIRECTORY = /etc/condor/certs
GSI_DAEMON_TRUSTED_CA_DIR = /etc/condor/ca
GSI_DELEGATION_KEYBITS = 1024
GSI_SKIP_HOST_CHECK = TRUE
CERTIFICATE_MAPFILE = /etc/condor/map/condor_mapfile

ALLOW_DAEMON = 127.0.0.1, $(IP_ADDRESS), condor@*
HOSTALLOW_WRITE = *
ALLOW_WRITE = *
ALLOW_READ = *
HOSTALLOW_DAEMON = $(IP_ADDRESS)

DENY_WRITE         = anonymous@*
DENY_ADMINISTRATOR = anonymous@*
DENY_DAEMON        = anonymous@*
DENY_NEGOTIATOR    = anonymous@*
DENY_CLIENT        = anonymous@*
